# Database
DATABASE_URL=postgresql://transfersim:password@localhost:5432/transfersim

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Service
PORT=3010
NODE_ENV=development

# BSIM Connection (default)
BSIM_DEFAULT_URL=http://localhost:3001
BSIM_DEFAULT_API_KEY=dev-api-key

# JWT Validation
JWT_PUBLIC_KEY_URL=http://localhost:3002/.well-known/jwks.json
JWT_ISSUER=http://localhost:3002

# Webhook (incoming - from orchestrators)
WEBHOOK_SECRET=dev-webhook-secret

# Webhook (outgoing - to WSIM for push notifications)
WSIM_WEBHOOK_URL=http://localhost:3002/internal/notifications/webhook
WSIM_WEBHOOK_SECRET=dev-wsim-webhook-secret

# WSIM Internal API (for profile image lookup)
WSIM_INTERNAL_API_URL=http://localhost:3002/api/internal
WSIM_INTERNAL_API_KEY=dev-wsim-internal-api-key

# Transfer Limits
DEFAULT_TRANSFER_LIMIT=10000
DEFAULT_DAILY_LIMIT=50000

# AWS S3 (for merchant logo storage)
AWS_REGION=ca-central-1
AWS_S3_BUCKET_PROFILES=banksim-profiles-tsim-dev

# CDN (CloudFront)
CDN_BASE_URL=https://cdn-dev.banksim.ca

# ContractSim Integration
CONTRACTSIM_API_KEY=dev-contractsim-api-key
CONTRACTSIM_WEBHOOK_URL=http://localhost:3020/webhooks/transfersim
CONTRACTSIM_WEBHOOK_SECRET=dev-contractsim-webhook-secret
