# Development Dockerfile with hot reload
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install all dependencies (including dev)
RUN npm ci

# Generate Prisma client
RUN npx prisma generate

# Copy source code
COPY tsconfig.json ./
COPY src ./src/

# Expose port
EXPOSE 3010

# Start with hot reload
CMD ["npm", "run", "dev"]
